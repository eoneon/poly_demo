<%= form_for @item, :html => {:id => 'item_form'} do |f| %>
  <%= render "items/hidden", f: f %>
  <%#= @item.itemizable.sub_elements %>
  <%#= select_tag :medium_type_id, options_from_collection_for_select(MediumType.all, :id, :name) %>
  <script type="text/javascript">
    function submitform(){
      $('#redirect_location').val(':edit');
      $('#item_form').submit();
    }
  </script>
  <script type="text/javascript">
    function reload(){
      var item_type_id = $('#selectItemtype').val();
      $('#item_item_type_id').val('item_type_id');
    }
  </script>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :medium_type %><br>
      <%= f.text_field :sku %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :sku %><br>
      <%= f.text_field :sku %>
    </div>

    <div class="col-md-2">
      <%= f.label :retail %><br>
      <%= f.text_field :retail %>
    </div>
  </div><br>

  <div class="col-md-12">
    <h4>Properties for Items:</h4>
    <% if @item.itemizable.present? %>
      <% @item.itemizable.sub_elements.each do |sub_element| %>
        <% sub_element.element_fields.each do |field| %>
          <%= render 'items/properties', f: f, parent: @item, field: field %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <%= f.submit "Save" %>
<% end %>
