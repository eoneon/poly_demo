<h1>Items#index</h1>

<% if @items.empty? %>
  <p><strong>No Items</strong></p>
<% end %>

<%= form_tag new_item_path, method: :get do %>
  <%= select_tag :medium_type_id, options_from_collection_for_select(MediumType.all, :id, :name) %>
  <%= submit_tag "New Item", name: nil %>
<% end %>

<br>

<table class="table table-striped">
  <thead>
    <th>ID</th>
    <th>Sku</th>
    <th>Description</th>
    <th>Properties</th>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.sku %></td>
        <td><%= item.itemizable.build_sub_elements_description %></td>
        <td><%= item.properties %></td>
        <td><%= link_to 'show', item_path(item) %> | <%= link_to 'Edit', edit_item_path(item) %> | <%= link_to 'Delete', item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
