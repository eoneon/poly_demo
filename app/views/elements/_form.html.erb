<%= form_for(parent, as: :element) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4>Sub Elements:</h4>
      <%= f.fields_for :element_groups do |builder| %>
        <%= render 'elements/element_group_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Field", f, :element_groups, "elements" %>
    </div>
  </div>
  <%= f.submit "Save" %>
<% end %>
